{
    "version": "0.2",
    "ignorePaths": [
        "**/.venv/**",
        "**/node_modules/**",
        "**/package-lock.json",
        "**/package.json",
        "**/poetry.lock"
    ],
    "language": "en",
    "languageSettings": [
        {
            "allowCompoundWords": true,
            "dictionaries": [
                "python"
            ],
            "languageId": "toml"
        },
        {
            "dictionaries": [
                "bash"
            ],
            "languageId": "*"
        }
    ],
    "maxNumberOfProblems": 100,
    "words": [
        "autofix",
        "dependabot",
        "editorconfig",
        "fgrep",
        "frontmatter",
        "ifeq",
        "maxlevel",
        "mdformat",
        "minlevel",
        "printf",
        "pyproject",
        "redhat",
        "venv",
        "virtualenvs",
        "yamlfmt"
    ]
}
